<div class="container" style="margin-top: 2rem">
  {{>header}}
  <h2>Add new snippet</h2>

  {{#errorMsg}}
  <div class="alert alert-danger">
    {{.}}
  </div>
  {{/errorMsg}}

  <form action="/create/" method="POST">
    <p>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required />
    </p>

    <p>
      <label for="body">Body:</label>
      <textarea type="text" id="body" name="body" ></textarea>
    </p>

    <p>
      <label for="notes">Notes:</label>
      <textarea type="text" id="notes" name="notes" ></textarea>
    </p>

    <p>
      <label for="language">Language:</label>
      <input type="text" id="language" name="language" />
    </p>

    <p>
        <label for="tags">Tags:</label>
        <input type="text" id="tags" name="tags" />
    </p>

    {{#user}}
      <p>
        <label for="author">Author:</label>
        <input type="text" id="author" name="author" placeholder="{{username}}" value="{{username}}"/>
      </p>
    {{/user}}

    <p>
      <button type="submit" class="btn btn-primary">Add snippet</button>
    </p>
  </form>
</div>
